{
  "name": "the-traffic-look-out",
  "version": "1.0.0",
  "description": "Smart Traffic Monitoring & Navigation System with Privacy-First Design",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "setup": "npm install && echo 'Setup complete! Run npm start to launch the server.'",
    "docker:build": "docker build -t traffic-lookout .",
    "docker:run": "docker run -p 3000:3000 --env-file .env traffic-lookout",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up -d --build",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "build": "echo 'Building application...' && npm run lint && npm run test",
    "postinstall": "echo 'Installation complete! Check README.md for setup instructions.'",
    "precommit": "npm run lint:fix && npm run format",
    "prepare": "husky install",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "logs": "pm2 logs traffic-lookout",
    "restart": "pm2 restart traffic-lookout",
    "stop": "pm2 stop traffic-lookout",
    "monitor": "pm2 monit"
  },
  "keywords": [
    "traffic",
    "navigation",
    "real-time",
    "privacy",
    "smart-city",
    "emergency-services",
    "route-optimization",
    "traffic-monitoring",
    "gis",
    "mapping",
    "location-services",
    "transportation",
    "urban-mobility",
    "iot",
    "api",
    "nodejs",
    "express",
    "jwt",
    "encryption",
    "gdpr-compliant"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "contributors": [
    {
      "name": "Traffic Look Out Team",
      "email": "team@traffic-lookout.com"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "crypto": "^1.0.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "express-async-errors": "^3.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "node-cron": "^3.0.3",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "ioredis": "^5.3.2",
    "mongoose": "^8.0.3",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "axios": "^1.6.2",
    "node-fetch": "^2.7.0",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "nodemailer": "^6.9.7",
    "express-handlebars": "^7.1.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "sanitize-html": "^2.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/validator": "^13.11.7",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5",
    "nyc": "^15.1.0",
    "artillery": "^2.0.3",
    "faker": "^5.5.3",
    "nock": "^13.4.0",
    "sinon": "^17.0.1",
    "chai": "^4.3.10",
    "mocha": "^10.2.0"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0",
    "newrelic": "^11.6.0",
    "@sentry/node": "^7.86.0",
    "@sentry/tracing": "^7.86.0"
  },
  "peerDependencies": {
    "redis": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/the-traffic-look-out.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/the-traffic-look-out/issues",
    "email": "bugs@traffic-lookout.com"
  },
  "homepage": "https://github.com/yourusername/the-traffic-look-out#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "server.js",
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/config/**",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "jest",
      "security"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error",
      "object-shorthand": "error",
      "prefer-destructuring": "error",
      "security/detect-object-injection": "error",
      "security/detect-non-literal-regexp": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "src/",
      "public/"
    ],
    "ext": "js,json,html,css",
    "ignore": [
      "node_modules/",
      "tests/",
      "coverage/",
      "logs/",
      "*.test.js"
    ],
    "exec": "node server.js",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**"
    ]
  }
}
