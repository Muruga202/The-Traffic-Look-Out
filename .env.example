# The Traffic Look Out - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Keys (IMPORTANT: Generate strong, unique keys for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Database Configuration (for production - replace with real database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=traffic_lookout
# DB_USER=traffic_user
# DB_PASSWORD=secure_password

# API Keys (for production integrations)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# OPENSTREETMAP_API_KEY=your-openstreetmap-api-key
# TRAFFIC_DATA_API_KEY=your-traffic-data-api-key

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/traffic-lookout.log

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Session Configuration
# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_TIMEOUT=86400000

# Redis Configuration (for production caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Monitoring and Analytics
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# ANALYTICS_API_KEY=your-analytics-api-key

# Emergency Services Integration
# EMERGENCY_SERVICES_API_KEY=your-emergency-services-api-key
# EMERGENCY_SERVICES_ENDPOINT=https://api.emergency-services.com

# Geolocation Services
# GEOLOCATION_API_KEY=your-geolocation-api-key
# REVERSE_GEOCODING_API_KEY=your-reverse-geocoding-api-key

# Push Notifications
# PUSH_NOTIFICATION_KEY=your-push-notification-key
# FIREBASE_SERVER_KEY=your-firebase-server-key

# Development Settings
DEBUG_MODE=true
API_DOCUMENTATION_ENABLED=true
ENABLE_SWAGGER=true
